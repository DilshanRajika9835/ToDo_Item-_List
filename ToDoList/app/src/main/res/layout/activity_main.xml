<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTodoItems"
        android:layout_width="397dp"
        android:layout_height="431dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etTodoTitle"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="7dp"
        android:hint="Enter text here"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAddTodo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:layout_marginBottom="7dp"
        android:id="@+id/btnAddTodo"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/add_btn"
        android:foreground="@android:drawable/ic_menu_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnDeleteTodo"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnEditTodo"
        android:layout_width="114dp"
        android:layout_height="49dp"
        android:background="@drawable/edit_btn"
        android:foreground="?attr/actionModeCutDrawable"
        android:rotationX="0"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAddTodo"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:layout_marginBottom="7dp"
        android:id="@+id/btnDeleteTodo"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/delete_btn"
        android:foreground="@android:drawable/ic_menu_delete"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>